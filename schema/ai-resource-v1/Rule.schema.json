{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource.dev/schema/ai-resource-v1/Rule.schema.json",
  "title": "Rule",
  "description": "A single AI rule resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Rule"
    },
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "spec": {
      "type": "object",
      "required": ["enforcement", "body"],
      "properties": {
        "enforcement": {
          "type": "string",
          "enum": ["may", "should", "must"]
        },
        "scope": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["files"],
            "properties": {
              "files": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "additionalProperties": false
          }
        },
        "body": {
          "$ref": "#/$defs/body"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "body": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/$defs/fragmentRef"
              }
            ]
          },
          "minItems": 1
        }
      ]
    },
    "fragmentRef": {
      "type": "object",
      "required": ["fragment"],
      "properties": {
        "fragment": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "inputs": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  }
}
