{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource-spec.org/schema/ai-resource-v1/Promptset.schema.json",
  "title": "Promptset",
  "description": "A collection of AI prompts",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Promptset"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "spec": {
      "type": "object",
      "required": ["prompts"],
      "properties": {
        "prompts": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "$ref": "#/definitions/prompt"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "minLength": 1
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "prompt": {
      "type": "object",
      "required": ["body"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "body": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
