{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource.dev/schema/ai-resource-v1/Promptset.schema.json",
  "title": "Promptset",
  "description": "A collection of related prompts",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Promptset"
    },
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "spec": {
      "type": "object",
      "required": ["prompts"],
      "properties": {
        "prompts": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "$ref": "#/$defs/promptItem"
            }
          },
          "additionalProperties": false,
          "minProperties": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "promptItem": {
      "type": "object",
      "required": ["body"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "body": {
          "$ref": "#/$defs/body"
        }
      },
      "additionalProperties": false
    },
    "body": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/$defs/fragmentRef"
              }
            ]
          },
          "minItems": 1
        }
      ]
    },
    "fragmentRef": {
      "type": "object",
      "required": ["fragment"],
      "properties": {
        "fragment": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "inputs": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  }
}
