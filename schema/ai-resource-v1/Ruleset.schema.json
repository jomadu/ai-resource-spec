{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource-spec.org/schema/ai-resource-v1/Ruleset.schema.json",
  "title": "Ruleset",
  "description": "A collection of AI rules",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Ruleset"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "spec": {
      "type": "object",
      "required": ["rules"],
      "properties": {
        "rules": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "$ref": "#/definitions/rule"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "minLength": 1
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "rule": {
      "type": "object",
      "required": ["body"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "priority": {
          "type": "integer",
          "default": 100
        },
        "enforcement": {
          "type": "string",
          "enum": ["may", "should", "must"]
        },
        "scope": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/scope"
          }
        },
        "body": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
