{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource-spec.org/schema/ai-resource-v1/Prompt.schema.json",
  "title": "Prompt",
  "description": "A single AI prompt resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Prompt"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "spec": {
      "type": "object",
      "required": ["body"],
      "properties": {
        "body": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "minLength": 1
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
