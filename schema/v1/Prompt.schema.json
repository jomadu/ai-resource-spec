{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-resource.dev/schema/v1/Prompt.schema.json",
  "title": "Prompt",
  "description": "A single AI prompt resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "ai-resource/v1"
    },
    "kind": {
      "type": "string",
      "const": "Prompt"
    },
    "metadata": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "spec": {
      "type": "object",
      "required": ["body"],
      "properties": {
        "body": {
          "$ref": "#/$defs/body"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "body": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/$defs/fragmentRef"
              }
            ]
          },
          "minItems": 1
        }
      ]
    },
    "fragmentRef": {
      "type": "object",
      "required": ["fragment"],
      "properties": {
        "fragment": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "inputs": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  }
}
